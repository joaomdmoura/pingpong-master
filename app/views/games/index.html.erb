<h1 class='page-header'>History</h1>

<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Opponent</th>
      <th>Score</th>
      <th>Result</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.played_at.strftime("%b %d") %></td>
        <td><%= game.opponent.email %></td>
        <td><%= game.score %></td>
        <td><%= game.result %></td>
      </tr>
    <% end %>
  </tbody>
</table>
